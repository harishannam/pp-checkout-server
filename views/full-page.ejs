    	<div>
		<button id="paynow">Pay with PayPal</button>
    	</div>

    	<script>
    		$( document ).ready(function() {
				 console.log( "ready!" );

				 $("#paynow").on('click', function(){
				 	console.log("paynow")

				 	$.get('/create-payment', function(resp){
				 		
				 		if(resp.state == 'created') {
				 			for(var i in resp.links){
				 				if(resp.links[i].method == 'REDIRECT') {
				 					console.log(resp.links[i].href)
				 					window.location = resp.links[i].href;
				 					break;
				 				}
				 			}
				 		}
				 	})
				 })
			});
    	</script>
